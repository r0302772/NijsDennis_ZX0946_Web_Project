@model Music.db.ViewModels.CreateSongViewModel

@{
    ViewData["Title"] = "Create Song";
}

<div class="row pt-5">
    <h2>New Song</h2>

    <hr>
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span asp-validation-for="DuplicateError" class="text-danger"></span>
            <div class="row pb-1">
                <div class="col-md-6">
                    <div class="input-group mb-2">
                        <span class="input-group-text"><label asp-for="SongTitle" class="control-label "></label></span>
                        <input asp-for="SongTitle" class="form-control">
                    </div>
                    <div class="pb-2">
                        <span asp-validation-for="SongTitle" class="text-danger"></span>
                    </div>

                    <div class="input-group mb-2">
                        <span class="input-group-text"><label asp-for="ArtistID" class="control-label "></label></span>
                        <select asp-for="SelectedArtists" asp-items="Model.Artists" class="form-control" multiple></select>
                    </div>
                    <div class="pb-2">
                        <span asp-validation-for="ArtistID" class="text-danger"></span>
                    </div>

                    <div class="input-group mb-2">
                        <span class="input-group-text"><label asp-for="RemixerID" class="control-label "></label></span>
                        <select asp-for="RemixerID" asp-items="Model.Remixers" class="form-control"></select>
                    </div>
                    <div class="pb-2">
                        <span asp-validation-for="RemixerID " class="text-danger"></span>
                    </div>

                    <div class="input-group mb-2">
                        <span class="input-group-text">
                            <label asp-for="AlbumID" class="control-label"></label>
                        </span>
                        <select asp-for="AlbumID" asp-items="Model.Albums" class="form-control"></select>
                    </div>
                    <div class="pb-2">
                        <span asp-validation-for="AlbumID " class="text-danger"></span>
                    </div>
                    <div class="input-group mb-2">
                        <span class="input-group-text"><label asp-for="ReleaseDate" class="control-label "></label></span>
                        <input asp-for="ReleaseDate" class="form-control">
                    </div>
                    <div class="pb-2">
                        <span asp-validation-for="ReleaseDate " class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="row pb-1">
                        <div class="input-group mb-2">
                            <span class="input-group-text">
                                <label asp-for="GenreID" class="control-label"></label>
                            </span>
                            <select asp-for="GenreID" asp-items="Model.Genres" class="form-control"></select>
                        </div>
                        <div class="pb-2">
                            <span asp-validation-for="GenreID" class="text-danger"></span>
                        </div>

                        <div class="input-group mb-2">
                            <span class="input-group-text"><label asp-for="BPM" class="control-label "></label></span>
                            <input asp-for="BPM" min=0 type="number" class="form-control">
                        </div>
                        <div class="pb-2">
                            <span asp-validation-for="BPM " class="text-danger"></span>
                        </div>

                        <div class="input-group mb-2">
                            <span class="input-group-text"><label asp-for="Key" class="control-label "></label></span>
                            <input asp-for="Key" class="form-control">
                        </div>
                        <div class="pb-2">
                            <span asp-validation-for="Key " class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row pb-1">
                        <h6 class="text-center pb-1">Length</h6>
                        <div class="col-md-6">
                            <div class="input-group mb-2">
                                <span class="input-group-text"><label asp-for="EditSongLength" class="control-label "></label></span>
                                <input id="editsonglength" asp-for="EditSongLength" class="form-control">
                            </div>
                            <div class="pb-2">
                                <span asp-validation-for="EditSongLength " class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group mb-2">
                                <span class="input-group-text"><label asp-for="ExtendedSongLength" class="control-label "></label></span>
                                <input asp-for="ExtendedSongLength" class="form-control">
                            </div>
                            <div class="pb-2">
                                <span asp-validation-for="ExtendedSongLength " class="text-danger"></span>
                            </div>
                        </div>
                        <span asp-validation-for="SongLenghtError" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row py-1">
                <div class="col-md-6">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-controller="Song" asp-action="Index" value="" class="btn btn-danger m-1">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
