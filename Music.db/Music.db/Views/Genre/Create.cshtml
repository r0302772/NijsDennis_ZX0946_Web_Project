@model Music.db.ViewModels.CreateGenreViewModel

@{
    ViewData["Title"] = "Create Genre";
}

<div class="row pt-5">
    <h2>New Genre</h2>

    <hr>
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span asp-validation-for="DuplicateError" class="text-danger"></span>
            <div class="row pb-1">
                <div class="col-md-6">
                    <div class="input-group mb-2">
                        <span class="input-group-text"><label asp-for="Name" class="control-label "></label></span>
                        <input asp-for="Name" class="form-control">
                    </div>
                    <div class="pb-2">
                        <span asp-validation-for="Name " class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row py-1">
                <div class="col-md-6">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-controller="Genre" asp-action="Index" value="" class="btn btn-danger m-1">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
